{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    /* Basic Options */
    "lib": [
      "es6"
    ],
    "jsx": "react-native",
    "incremental": true,
    "isolatedModules": true,
    /* Strict Type-Checking Options */
    /* Additional Checks */
    /* Module Resolution Options */
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "features/*": [
        "src/features/*"
      ],
      "shared/*": [
        "src/shared/*"
      ],
    },
    /* Source Map Options */
    /* Experimental Options */
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}